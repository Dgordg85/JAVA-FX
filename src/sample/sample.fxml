<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet /css/styles.css?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <stylesheets><URL value="@/css/Styles.css" /></stylesheets>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox id="hbox" alignment="CENTER" prefHeight="39.0" prefWidth="478.0">
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Напишите сообщение..." />
        <Button fx:id="btn" onAction="#sendMsg" text="Отправить" />
    </HBox>
</VBox>
